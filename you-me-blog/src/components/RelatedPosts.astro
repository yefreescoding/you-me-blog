---
// import utils
import { slugify, formatDate } from '../js/utils';

const { relatedPosts } = Astro.props;
---

{
  relatedPosts.map((post) => (
    <a href={post.url} class="related">
      <img class="related__image" src={post.frontmatter.image.src} alt="" />
      <div class="related__text">
        <h3>{post.frontmatter.title}</h3>
        <small>{post.frontmatter.description}</small>
      </div>
    </a>
  ))
}

<style>
  .related,
  .related__text {
    display: flex;
    gap: 1em;
  }

  .related {
    border: 2px solid var(--text);
    padding: 0.5rem;
    box-shadow: hsla(322, 87%, 56%, 0.4) 0.3125rem 0.3125rem;
    transition: all 0.2s ease-in-out;
  }

  .related:hover {
    transform: translate(-3px, -3px);
    box-shadow: rgba(240, 46, 170, 0.4) 0.3125rem 0.3125rem,
      rgba(240, 46, 170, 0.3) 0.625rem 0.625rem,
      rgba(240, 46, 170, 0.2) 0.9375rem 0.9375rem,
      rgba(240, 46, 170, 0.1) 1.25rem 1.25rem,
      rgba(240, 46, 170, 0.05) 1.5625rem 1.5625rem;
  }

  .related__image {
    flex: 1;
    object-fit: cover;
    width: 6.125rem;
    aspect-ratio: 4/4;
  }
  .related__text {
    flex: 2;
    flex-direction: column;
  }
</style>
