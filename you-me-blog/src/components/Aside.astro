---

const { frontmatter, url} = Astro.props;

const {title, description, date, category, image} = frontmatter;

---
<aside class="aside">
  <h2 class="aside__h2">More posts</h2>
    <article class="aside__content">
    <a class="card__link" href="/about/">
      <img class="card__image" src='/images/blog-images/my-space-blog.png' alt='vainas'>
      <div class="aside__text">
        <h2 class="card__h2">titulo de entrada</h2>
        <p class="card__p">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Tenetur, aliquam?</p>
      </div>
