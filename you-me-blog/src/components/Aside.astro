<style lang="scss">
    .aside{ 
      flex-basis: 20em;
      flex-grow: 1;
      display: flex;
      flex-flow: column;
      gap: 1rem;
      &__h2{
        border-bottom: 1px solid hsl(0, 0%, 85%);
      }
      &__content,
      &__text {
        display: flex;
        gap: 1rem;
      }
      &__content{
        flex-direction: column;
      }
      &__content{
        align-items: flex-start;
      }
      &__image{
        width: 10rem;
        object-fit: cover;
        object-position: bottom;
        aspect-ratio: 1;
      }
      &__text{
        flex-direction: column;
      }
      &__link{
        text-decoration: underline;
        color: hsl(188, 30%, 40%);
      }
    }
</style>