---
import navData from '../Data/NavData';

const socialLinks = [
  {
    title: 'Instagram',
    link: 'https://www.instagram.com/',
  },
  {
    title: 'Twitter',
    link: 'https://twitter.com/',
  },
  {
    title: 'GitHub',
    link: 'https://github.com/',
  },
];

const ConnectLinks = [
  {
    title: 'About',
    link: '/about/',
  },
  {
    title: 'Email Me',
    link: '#',
  },
  {
    title: 'Portfolio',
    link: 'https://github.com/',
  },
];
---

<footer class="footer">
  <nav class="footer__nav">
    <div class="footer__division">
      <h3 class="footer__h3">Social Media</h3>
      {
        socialLinks.map((item) => (
          <a class="footer__links" href={item.link} target="_blank">
            {item.title}
          </a>
        ))
      }
    </div>
    <div class="footer__division">
      <h3 class="footer__h3">Connect</h3>
      {
        ConnectLinks.map((item) => (
          <a class="footer__links" href={item.link} target="_blank">
            {item.title}
          </a>
        ))
      }
    </div>
  </nav>
  <div class="footer__copyright">
    <small class="footer__meta">
      copyright &copy;
      <span id="copyright" class="footer__date"></span>
      | All right reserved.
    </small>
  </div>
</footer>

<style lang="scss">
  .footer {
    margin-top: 3rem;
    :is(&, &__division) {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    padding: 0.5rem 3rem;
    background-color: var(--background);
    text-align: center;
    border-top: 2px solid var(--text);
    &__nav {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(min(8rem, 100%), 1fr));
      place-items: center;
    }
  }
</style>

<script>
  document.querySelector('#copyright').textContent = new Date()
    .getFullYear()
    .toString();
</script>
